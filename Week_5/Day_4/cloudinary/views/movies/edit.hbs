<h2>Edit the movie</h2>

<div class='row'>
  <form action='/movies/edit/{{_id}}' method='post' enctype='multipart/form-data'>
    <div class='form-group'>
      <label for='title'>
        Title:
        <input type='text' name='title' class='form-control' value='{{title}}' />
      </label>
    </div>
    <div class='form-group'>
      <label for='description'>
        Description
        <textarea
          name='description'
          cols='30'
          rows='10'
          class='form-control'
        >{{description}}</textarea>
      </label>
    </div>
    <input type='text' value='{{imageUrl}}' name='currentImage' hidden />

    <div class='form-group'>
      <label for='image'>
        Image:
        <input type='file' name='image' class='form-control-file' />
      </label>
    </div>

    <button type='submit' class='btn btn-primary'>Edit movie</button>
  </form>

</div>